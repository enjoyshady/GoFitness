<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    tools:context=".fragment.ExerciseDetailsModification.EditExerciseDescriptionFragment">

    <EditText
        android:id="@+id/description"
        android:layout_marginStart="16dp"
        android:textColor="@color/black_translucence_eighty"
        android:layout_marginEnd="16dp"
        android:textColorHint="@color/black_translucence"
        android:textSize="14sp"
        android:gravity="top"
        android:hint="@string/text_add_description_here"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</ScrollView>