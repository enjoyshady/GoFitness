<?xml version="1.0" encoding="utf-8"?>
<com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentView="@id/item_view"
    app:rightMenuView="@id/delete_view">

    <com.gofitness.view.LineItemView
        android:id="@+id/item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/delete_view"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/red_translucence_eighty"
        android:gravity="center"
        android:text="@string/text_delete"
        android:textColor="@color/white" />

</com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>